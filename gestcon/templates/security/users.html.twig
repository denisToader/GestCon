{% extends "base.html.twig" %} 

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../../../css/style.css">
    <link rel="stylesheet" type="text/css" href="../../css/style.css">
{% endblock %}

{% block title %}{% trans into '' ~ app.request.getLocale() %}View details{% endtrans %}{% endblock %}

{% block body %}
    <h2>{% trans into '' ~ app.request.getLocale() %}View existing users{% endtrans %}</label></h2>
    <br /> <br />

    <table class="table table-triped" style="width:30%; margin:auto;">
        <thead>
            <tr class="table-active">
                <td>ID</td>
                <td>{% trans into '' ~ app.request.getLocale() %}Username{% endtrans %}</td>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="6">
                    <a class="btn btn-sm btn-success"  href="{{ path('register') }}">{% trans into '' ~ app.request.getLocale() %}Add new user{% endtrans %}</a>
                </td>
            </tr>

        </tbody>
    </table>    
{% endblock %}